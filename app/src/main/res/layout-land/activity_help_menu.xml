<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sosy.qbielka.loveseeker.HelpMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPink"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="31dp">

        <TextView
            android:id="@+id/help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/help_explanation"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/help_explanation"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="15dp"
            android:text="@string/help_title_string"
            android:textColor="@color/colorPurple"/>

        <ImageView
            android:id="@+id/QuinceHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/help_title"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@mipmap/head1" />

        <ImageView
            android:id="@+id/LoraHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/QuinceHead"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:srcCompat="@mipmap/head2" />

        <TextView
            android:id="@+id/help_explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/QuinceHead"
            android:layout_marginEnd="117dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="117dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/QuinceHead"
            android:layout_toRightOf="@+id/QuinceHead"
            android:text="@string/help_explanation"
            android:textColor="@color/colorPurple"/>

        <Button
            android:id="@+id/help_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/back_btn" />

        <TextView
            android:id="@+id/hyperlink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/help_back_btn"
            android:layout_alignLeft="@+id/help_explanation"
            android:layout_alignStart="@+id/help_explanation"
            android:layout_alignRight="@+id/help_explanation"
            android:layout_alignEnd="@+id/help_explanation"
            android:autoLink="web"
            android:focusable="true"
            android:text="@string/class_hyperlink" />

        <TextView
            android:id="@+id/quince_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/lora_bio"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_toLeftOf="@+id/help_explanation"
            android:layout_toStartOf="@+id/help_explanation"
            android:text="@string/quince_bio"
            android:textColor="@color/colorPurple"/>

        <TextView
            android:id="@+id/lora_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_marginEnd="9dp"
            android:layout_alignLeft="@+id/LoraHead"
            android:layout_alignStart="@+id/LoraHead"
            android:layout_below="@+id/LoraHead"
            android:layout_marginTop="13dp"
            android:text="@string/lora_bio"
            tools:layout_editor_absoluteX="351dp"
            tools:layout_editor_absoluteY="222dp"
            android:textColor="@color/colorPurple"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
